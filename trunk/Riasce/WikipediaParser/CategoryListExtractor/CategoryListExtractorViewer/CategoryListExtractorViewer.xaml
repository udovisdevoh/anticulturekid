<Window x:Class="Riasce.CategoryListExtractorViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="317" Height="109" Title="Extracting category list"
    ResizeMode="NoResize"
    Closing="cancelButton_click">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <ProgressBar Grid.Row="0" Grid.ColumnSpan="2" Name="progressBar" Margin="10,10,0,13" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="30" />
        <Button Grid.Row="1" Name="buttonCancel" Margin="10,0,10,0" Click="cancelButton_click">Continue later</Button>
        <TextBlock Name="displayedPercent" Grid.Row="1" Margin="20,0,20,0" Grid.Column="1"></TextBlock>
    </Grid>
</Window>
